<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane onMouseEntered="#handleSoundIcon" prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Sample.View.MainPageController">
   <stylesheets>
      <URL value="@../CSS/Main.CSS" />
      <URL value="@../CSS/Style.CSS" />
   </stylesheets>
   <children>
      <Button fx:id="newGame" layoutX="145.0" layoutY="374.0" mnemonicParsing="false" onMouseClicked="#newGame" prefHeight="55.0" prefWidth="170.0" text="New Game">
         <font>
            <Font size="24.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
      <Button fx:id="profile" layoutX="60.0" layoutY="441.0" mnemonicParsing="false" onMouseClicked="#profile" prefHeight="55.0" prefWidth="170.0" text="Profile">
         <font>
            <Font size="24.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
      <Button fx:id="scoreboard" layoutX="250.0" layoutY="441.0" mnemonicParsing="false" onMouseClicked="#scoreboard" prefHeight="55.0" prefWidth="170.0" text="Scoreboard">
         <font>
            <Font size="24.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
      <Button layoutX="14.0" layoutY="543.0" mnemonicParsing="false" onMouseClicked="#exitGame" prefHeight="55.0" prefWidth="82.0" text="Exit">
         <font>
            <Font size="24.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
      <ImageView fx:id="mute" blendMode="MULTIPLY" fitHeight="55.0" fitWidth="55.0" layoutX="832.0" layoutY="14.0" onMouseClicked="#muteSound" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../pictures/unmute.png" />
         </image>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </ImageView>
      <ImageView fx:id="unmute" blendMode="MULTIPLY" fitHeight="55.0" fitWidth="35.0" layoutX="842.0" layoutY="15.0" onMouseClicked="#unmuteSound" pickOnBounds="true" preserveRatio="true" visible="false">
         <image>
            <Image url="@../pictures/mute.png" />
         </image>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </ImageView>
   </children>
</AnchorPane>
